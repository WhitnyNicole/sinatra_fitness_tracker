<h2>Here are your exercises</h2>
<br><br>
<p><%= @exercise.workout.category %></p>
<p>Completed on: <%= @exercise.day %></p>
<p>Move: <%= @exercise.move %></p>
<p>Completed sets: <%= @exercise.sets %></p>
<p>Completed reps: <%= @exercise.reps %></p>
<p>Weight used: <%= @exercise.weight %></p>
<p>Intensity: <%= @exercise.intensity %></p>
<% if current_user == @exercise.workout.user %>
  <a href="/exercises/<%= @exercise.id %>/edit">Edit Exercise</a>
<br><br>
<form class="" action="/exercises/<%= @exercise.id %>" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete This Exercise">
</form>
<% end %>
