  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Sinatra Fitness Tracker</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- <link rel="stylesheet" href="/stylesheets/main.css" /> -->
    <link rel="stylesheet" href="/stylesheets/fitness_tracker.html" />
  </head>
  <body>

    <div class="nav">
      <a href="/">Home</a>
      <% if logged_in? %>
        <a href="/workouts">My Workout Categories</a>
        <a href="/workouts/new">New Workout</a>
        <a href="/exercises">My Exercises</a>
        <a href="/logout">Logout</a>
        <br><br><p><i>Signed in as <%= current_user.name %></i></p>
        <% else %>
        <a href="/login">Log in</a>
        <% end %>
    </div>

    <div class="wrapper">
         <% if flash[:message] %>
         <h3 style="color: green;"><%= flash[:message] %></h3>
         <% end %>
         <% if flash[:errors] %>
         <h3 style="color: red;"><%= flash[:errors] %></h3>
         <% end %>

           <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>SinatraFitnessTracker</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
